# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# 2 space indentation for SystemVerilog and VHDL code
[*.{sv, svh, v, vhd}]
indent_style = space
indent_size = 2

[README.md]
max_line_length = 0
indent_size = 2

[CONTRIBUTING.md]
max_line_length = 76
